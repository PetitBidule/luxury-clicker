# Configuration des API de paiement
# Copiez ce fichier vers .env et remplissez avec vos vraies clés

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_ENABLED=true

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
PAYPAL_ENABLED=false

# URLs de redirection
PAYMENT_SUCCESS_URL=http://localhost:5173/payment/success
PAYMENT_CANCEL_URL=http://localhost:5173/payment/cancel
PAYMENT_WEBHOOK_URL=http://localhost:5000/api/payment/webhook

# Configuration générale
PAYMENT_CURRENCY=EUR
PAYMENT_MIN_AMOUNT=1.00
PAYMENT_MAX_AMOUNT=1000.00
PAYMENT_CONVERSION_RATE=100
